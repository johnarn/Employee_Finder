<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/create_attribute"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/txtViewCreateAttribute"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/txtViewNameOfAttribute"
        android:layout_margin="30dp"
        android:layout_below="@+id/txtViewCreateAttribute"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtViewNameOfAttribute"
        android:layout_below="@+id/txtViewCreateAttribute"
        android:layout_margin="30sp"
        android:layout_toEndOf="@id/txtViewNameOfAttribute"
        />

</RelativeLayout>